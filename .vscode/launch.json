{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Backend Develop",
      "request": "launch",
      "runtimeArgs": ["run", "start:backend"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "name": "Backend Production",
      "request": "launch",
      "runtimeArgs": ["run", "start:backend:prod"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": false,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
